#!/usr/bin/env bash

if
  [[ -s "/home/philippe/.rvm/gems/ruby-2.3.1@global/environment" ]]
then
  source "/home/philippe/.rvm/gems/ruby-2.3.1@global/environment"
  exec irb "$@"
else
  echo "ERROR: Missing RVM environment file: '/home/philippe/.rvm/gems/ruby-2.3.1@global/environment'" >&2
  exit 1
fi
